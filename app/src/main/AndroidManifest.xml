<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsun.framework">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".okhttp.activity.OKHttpActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".tablayout.activity.TabLayoutActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".slide.activity.SlideActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".bottomtab.BottomTabActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".recyclerview.RecyclerViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".recyclerview.ComplexRecyclerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".fragmenttab.FragmentTabActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".fragmentpagertab.FragmentPagerTabActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
        <activity android:name=".webview.WebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"></activity>
    </application>

</manifest>