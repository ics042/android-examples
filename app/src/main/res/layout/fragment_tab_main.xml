<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="We Chat"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_tab_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_top_border">
        <LinearLayout
            android:id="@+id/ll_bottom1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/tab_weixin_pressed"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:text="We Chat"
                android:contentDescription="#00ff00"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:clickable="false"
                android:background="#00000000"
                android:src="@drawable/tab_contact_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:text="Contact"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_friend"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:src="@drawable/tab_friend_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_friend"
                android:layout_width="wrap_content"
                android:text="Friend"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/tab_settings_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:text="Me"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>